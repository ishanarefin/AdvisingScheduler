<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:columnCount="2"
    android:background="@android:color/holo_blue_light"
    tools:context="com.wordpress.ishansaysjava.advisingscheduler.CourseActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:textColor="@android:color/holo_red_dark"
        android:text="Class Time:"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="0"
        android:text="sdfsdfdsf"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/time_class"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_column="0"
        android:textColor="@android:color/holo_red_dark"
        android:layout_row="1"
        android:text="Lab Time:"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="1"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/time_lab"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="2"
        android:textColor="@android:color/holo_red_dark"
        android:text="Class Day:"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="2"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/day_class"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="3"
        android:textColor="@android:color/holo_red_dark"
        android:text="Lab Day:"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_column="1"
        android:layout_row="3"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/day_lab"
        android:layout_margin="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:text="Edit"
        android:layout_column="0"
        android:layout_row="4"
        android:background="@android:color/holo_blue_bright"
        android:layout_margin="10dp"
        android:onClick="edit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:text="Remove"
        android:layout_column="1"
        android:layout_row="4"
        android:background="@android:color/holo_blue_bright"
        android:layout_margin="10dp"
        android:onClick="remove"/>

</GridLayout>
